<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>Metroapi &mdash; Станции метро в вашем приложении</title>
    <meta property="og:title" content="Metroapi &mdash; Станции метро в вашем приложении" />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="http://metroapi.ru/" />
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Metroapi", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li><a href="/swagger">Документация</a></li>
                    <li><a href="https://www.nuget.org/packages/MetroApi.Client/">MetroApi.Client</a></li> 
                    <li><a href="https://github.com/bolkhovsky/metroapi">MetroApi on Github</a></li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>
                &copy; @DateTime.Now.Year <a href="https://github.com/bolkhovsky">Ilya Bolkhovsky</a>
                <div class="fb-like" data-href="http://metroapi.ru/" data-layout="button_count" data-action="like" data-show-faces="true" data-share="false"></div>
            </p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
